<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name_income_expenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name_hairstyle_income"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_count_income_expenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/do_hair"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_price_income_expenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/avg_price"
            android:textAlignment="textEnd"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>