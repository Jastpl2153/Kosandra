<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/nav_view"
    android:fillViewport="true"
    tools:context=".ui.client.fragment.ClientAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/client_image_add"
            android:layout_width="@dimen/layout_width_photo"
            android:layout_height="@dimen/layout_height_circle_photo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_padding_twenty_five"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo_add"
            app:civ_border_color="@color/blue_200"
            app:civ_border_width="2dp"/>

        <EditText
            android:id="@+id/et_client_name"
            style="@style/EditTextStyle"
            android:hint="@string/name_surname"
            android:inputType="textCapWords"
            android:autofillHints="username"/>

        <EditText
            android:id="@+id/et_client_phone"
            style="@style/EditTextStyle"
            android:hint="@string/phone"
            android:inputType="phone"
            android:autofillHints="number"/>

        <EditText
            android:id="@+id/et_client_birthday"
            style="@style/EditTextStyle"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/birthday"
            android:inputType="date"
            android:autofillHints="date"/>

        <EditText
            android:id="@+id/et_hair_length"
            style="@style/EditTextStyle"
            android:hint="@string/hair_length"
            android:inputType="number"
            android:autofillHints="number"/>

        <EditText
            android:id="@+id/et_hair_color"
            style="@style/EditTextStyle"
            android:hint="@string/hair_color"
            android:inputType="textCapSentences"
            android:autofillHints="text"/>

        <EditText
            android:id="@+id/et_hair_density"
            style="@style/EditTextStyle"
            android:hint="@string/hair_density"
            android:inputType="textCapSentences"
            android:autofillHints="text"/>

        <EditText
            android:id="@+id/et_conversation_details"
            style="@style/EditTextStyle"
            android:hint="@string/speak_client"
            android:inputType="textCapSentences|textMultiLine"
            android:autofillHints="text"/>
    </LinearLayout>
</ScrollView>