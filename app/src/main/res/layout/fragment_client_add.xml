<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/nav_view"
    android:fillViewport="true"
    tools:context=".ui.client.ClientAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/client_image_add"
            android:layout_width="145dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo_client"
            app:civ_border_color="@color/blue_200"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="58dp" />

        <EditText
            android:id="@+id/et_client_name"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_client_phone"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_client_birthday"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_birthday"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"  />

        <EditText
            android:id="@+id/et__hair_length"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_hair_length"
            android:inputType="number" />

        <EditText
            android:id="@+id/et__hair_color"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_hair_color"
            android:inputType="text" />

        <EditText
            android:id="@+id/et__hair_density"
            style="@style/EditTextStyle"
            android:hint="@string/Enter_hair_density"
            android:inputType="text" />


        <EditText
            android:id="@+id/et_conversation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/EditTextStyle"
            android:inputType="textMultiLine"
            android:hint="@string/speak_client"/>
    </LinearLayout>
</ScrollView>