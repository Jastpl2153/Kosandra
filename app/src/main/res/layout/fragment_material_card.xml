<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/nav_view"
    android:fillViewport="false"
    tools:context=".ui.material.fragment.MaterialCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_ten" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_layout_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_marginEnd="@dimen/margin_ten"
            android:background="@drawable/frame_client_card"
            android:paddingStart="@dimen/margin_three"
            app:columnCount="2"
            app:rowCount="9">

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/type_material"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/color_material"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/code_material"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/count"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/price"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/type_kanekalon"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/manufacture"
                app:layout_column="0"
                app:layout_row="6" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:text="@string/type_curl"
                app:layout_column="0"
                app:layout_row="7" />

            <TextView
                style="@style/TextViewGridLayout"
                android:layout_marginStart="@dimen/margin_twenty"
                android:paddingBottom="50dp"
                android:text="@string/length_curls"
                app:layout_column="0"
                app:layout_row="8" />

            <TextView
                android:id="@+id/type_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/type_material"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/color_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/color_material"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/code_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/code_material"
                app:layout_column="1"
                app:layout_row="2" />

            <TextView
                android:id="@+id/count_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/count"
                app:layout_column="1"
                app:layout_row="3" />

            <TextView
                android:id="@+id/price_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/price"
                app:layout_column="1"
                app:layout_row="4" />

            <TextView
                android:id="@+id/type_kanekalon_material_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/type_kanekalon"
                app:layout_column="1"
                app:layout_row="5" />

            <TextView
                android:id="@+id/manufacture_kanekalon_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/manufacture"
                app:layout_column="1"
                app:layout_row="6" />

            <TextView
                android:id="@+id/type_curls_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/type_curl"
                app:layout_column="1"
                app:layout_row="7" />

            <TextView
                android:id="@+id/length_info"
                style="@style/TextViewGridLayoutInfo"
                android:text="@string/length_curls"
                app:layout_column="1"
                app:layout_row="8" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</ScrollView>