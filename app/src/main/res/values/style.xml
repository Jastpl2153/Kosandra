<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for text using white color -->
    <style name="AppLightTextStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Background for download activity -->
    <style name="LightThemeLoadingActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:background">@drawable/light_loading_background</item>-->
        <item name="android:windowBackground">@drawable/background_loading_app</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:ems">10</item>
    </style>

    <style name="TextViewStaticCartClient" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/margin_card_client</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
    </style>

    <style name="TextViewCartClientDataBase" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/margin_card_client</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_card_client</item>
        <item name="layout_gravity">fill_horizontal</item>
    </style>

    <style name="EditTextCardClient" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_card_client</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_edit_client</item>
        <item name="layout_gravity">fill_horizontal</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AddHairstyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_card_client</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_card_client</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>